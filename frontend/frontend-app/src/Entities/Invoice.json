{
  "name": "Invoice",
  "type": "object",
  "properties": {
    "invoice_number": {
      "type": "string",
      "description": "Unique identifier of the invoice"
    },
    "vendor_name": {
      "type": "string",
      "description": "Name of the seller/vendor"
    },
    "buyer_name": {
      "type": "string",
      "description": "Name of the buyer/client"
    },
    "invoice_date": {
      "type": "string",
      "format": "date",
      "description": "Date of issuance"
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Payment due date"
    },
    "currency": {
      "type": "string",
      "description": "Currency code (e.g., USD, EUR)"
    },
    "total_amount": {
      "type": "number",
      "description": "Total invoice amount"
    },
    "line_items": {
      "type": "array",
      "description": "List of items in the invoice",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "unit_price": {
            "type": "number"
          },
          "total": {
            "type": "number"
          }
        }
      }
    },
    "file_url": {
      "type": "string",
      "description": "URL to the original PDF file"
    },
    "validation_status": {
      "type": "string",
      "enum": [
        "valid",
        "invalid",
        "warning"
      ],
      "default": "warning",
      "description": "Overall quality control status"
    },
    "validation_report": {
      "type": "object",
      "description": "Detailed validation results and error messages",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "score": {
          "type": "number"
        }
      }
    }
  },
  "required": [
    "file_url"
  ],
  "rls": {
    "create": {},
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}